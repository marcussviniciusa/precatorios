# Environment variables for Docker deployment with Traefik
# Copy this to .env and customize values

# Domain Configuration
DOMAIN=your-domain.com

# External MongoDB Configuration (servidor já instalado)
MONGODB_URI=mongodb://user:password@mongodb-server:27017/precatorios5?authSource=admin

# Application Configuration
NEXTAUTH_SECRET=your-secure-nextauth-secret-minimum-32-characters
JWT_SECRET=your-secure-jwt-secret-key

# Evolution API Configuration
EVOLUTION_API_URL=https://api.marcussviniciusa.cloud
EVOLUTION_API_KEY=your-evolution-api-key

# MinIO Configuration (serviço externo)
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_ENDPOINT=s3.your-domain.com
MINIO_PORT=443
MINIO_USE_SSL=true
MINIO_BUCKET_NAME=precatorios-files

# OpenAI Configuration (Optional)
OPENAI_API_KEY=your-openai-api-key

# Exemplo de configuração:
# DOMAIN=precatorios.exemplo.com
# MONGODB_URI=mongodb://precatorios_user:senha123@10.0.0.100:27017/precatorios5?authSource=admin
# MINIO_ENDPOINT=s3.precatorios.exemplo.com